#
# Makefile for KLAYERS.  Most of the actual work is done by make_klayers.
# make clean; make -f Makefile_chip airs_wetwater_test
# make clean; make -f Makefile_chip airs_wetwater
# make clean; make -f Makefile_chip airs_damewater

# ------
# Builds
# ------

airs_wetwater_test:
	rm -f cbplev.f wexsvp.f incLAY.f
	ln -s new_wexsvp.f wexsvp.f
	ln -s ../Grid/cbplev_airs_oco2_pbl_v2.f cbplev.f
	ln -s incLAY_wetwater.f incLAY.f
	make -f make_klayers_chip
	mv a.out ../BinV201_chip/klayers_airs_wetwater_test

g80_wetwater:
	rm -f cbplev.f wexsvp.f incLAY.f
	ln -s new_wexsvp.f wexsvp.f
	ln -s ../Grid/cbplev_airs_oco2_pbl_v2.f cbplev.f
	ln -s incLAY_wetwater.f incLAY.f
	make -f make_klayers_chip_g80
	mv a.out ../BinV201_chip/klayers_g80_wetwater

g80_samewater:
	rm -f cbplev.f wexsvp.f incLAY.f
	ln -s new_wexsvp.f wexsvp.f
	ln -s ../Grid/cbplev_airs_oco2_pbl_v2.f cbplev.f
	ln -s incLAY_samewater.f incLAY.f
	make -f make_klayers_chip_g80
	mv a.out ../BinV201_chip/klayers_g80_samewater

airs_wetwater:
	rm -f cbplev.f wexsvp.f incLAY.f
	ln -s new_wexsvp.f wexsvp.f
	ln -s ../Grid/cbplev_airs_oco2_pbl_v2.f cbplev.f
	ln -s incLAY_wetwater.f incLAY.f
	make -f make_klayers_chip
	mv a.out ../BinV201_chip/klayers_airs_wetwater

airs_samewater:
	rm -f cbplev.f wexsvp.f incLAY.f
	ln -s new_wexsvp.f wexsvp.f
	ln -s ../Grid/cbplev_airs_oco2_pbl_v2.f cbplev.f
